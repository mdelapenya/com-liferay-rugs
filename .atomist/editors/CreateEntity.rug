@description "Creates a java file for an entity, passed as parameter"
editor CreateEntity

param entity_name: ^.*$
param root_package: ^.*$

let className = { "src/main/java/" + root_package.replace(/\./g,'/') + "/" + entity_name + ".java" }
let classContent = { "class " + entity_name + " {}" }

let template = "Entity.vm"

with Project
	do merge template to className